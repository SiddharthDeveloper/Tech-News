<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#000"
    android:orientation="vertical"
    android:padding="5dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:elevation="15dp"
        app:cardCornerRadius="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">

            <ImageView
                android:id="@+id/newsImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:adjustViewBounds="true"
                android:cropToPadding="true"
                android:scaleType="fitCenter"
                android:src="@drawable/newsplaceholder"
                app:srcCompat="@drawable/newsplaceholder" />


            <TextView
                android:id="@+id/newsTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/newsImage"
                android:padding="10dp"
                android:text="Title"
                android:textColor="#EE0505"
                android:textSize="20sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/newsAuthor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/newsTitle"
                android:drawableLeft="@drawable/ic_perm_identity_black_24dp"
                android:padding="10dp"
                android:text="Author: Siddharth Gupta"
                android:textSize="15sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/newsDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/newsAuthor"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="-12dp"
                android:gravity="center"
                android:text="July 17, 1999"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/newsDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/newsAuthor"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="Complete News....."
                android:textStyle="bold" />


        </RelativeLayout>


    </androidx.cardview.widget.CardView>
</RelativeLayout>